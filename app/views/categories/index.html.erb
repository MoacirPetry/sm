<hr>
  <form class="form-inline">
    <div class="form-group">
      <i class="fas fa-list-ul mb-2 mr-sm-2"></i>
      <h4 class="text-left mb-2 mr-sm-2">List of Categories</h4>
    </div>
    <div class="form-group">
      <%= link_to 'New Category', new_category_path, :class => "btn btn-md btn-success mb-2 mr-sm-2", :role => "button" %>
    </div>
  </form>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="2" style="text-align:center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td align="center"><%= link_to 'Edit', edit_category_path(category), :class => "btn btn-md btn-info", :role => "button" %></td>
        <td align="center"><%= link_to 'Delete', category, :class => "btn btn-md btn-danger", :role => "button", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br><%= paginate @categories %>
