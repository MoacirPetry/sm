<h3 class="text-left">List of Categories</h3>
<hr>
  <form class="form-inline my-2 my-lg-0">
    <%= link_to 'New Category', new_category_path, :class => "btn btn-md btn-success", :role => "button" %>
    <div class="input-group mb-2">
      <%= search_form_for @q do |f| %>
        <%= f.search_field :name_cont, class: "form-control", placeholder: "Search by Name" %>
        <div class="input-group-append">
          <%= f.submit 'Search', class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </form>

<hr>
<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="2" style="text-align:center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td align="center"><%= link_to 'Edit', edit_category_path(category), :class => "btn btn-md btn-info", :role => "button" %></td>
        <td align="center"><%= link_to 'Delete', category, :class => "btn btn-md btn-danger", :role => "button", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
