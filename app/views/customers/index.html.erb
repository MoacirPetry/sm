<hr>
  <form class="form-inline">
    <div class="form-group">
      <i class="fas fa-list-ul mb-2 mr-sm-2"></i>
      <h4 class="text-left mb-2 mr-sm-2">List of Customers</h4>
    </div>
    <div class="form-group">
      <%= link_to 'New Customer', new_customer_path, :class => "btn btn-md btn-success mb-2 mr-sm-2", :role => "button" %>
    </div>
  </form>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th><i class="fas fa-edit"></i></th>
      <th><i class="fas fa-trash-alt"></i></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= customer.name %></td>
        <td><%= customer.email %></td>
        <td><%= number_to_phone(customer.phone_number, country_code: 1) %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer), :class => "btn btn-md btn-info", :role => "button" %></td>
        <td><%= link_to 'Delete', customer, :class => "btn btn-md btn-danger", :role => "button", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br><%= paginate @customers %>
