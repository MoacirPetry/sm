<br>
<div class="row justify-content-center">
  <div class="col-sm-6">
    <div class="card card-body mb-2">
      <%= form_with(model: customer, local: true) do |form| %>
        <% if customer.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

            <ul>
            <% customer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <hr>
        <h4 class="lead text-center">Customer</h4>
        <hr>

        <div class="panel panel-default">
          <div class="panel-body">
            <%= form.label :name, :class => "sr-only" %>
            <%= form.text_field :name, id: :customer_name, :class => "form-control", :placeholder => "Name" %><br>

            <%= form.label :email, :class => "sr-only" %>
            <%= form.text_field :email, id: :customer_email, :class => "form-control", :placeholder => "Email" %><br>

            <%= form.label :phone_number, :class => "sr-only" %>
            <%= form.number_field :phone_number, id: :customer_phone_number, :class => "form-control", :placeholder => "Phone Number" %><br>

            <%= render 'shared/button', :form => form %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
