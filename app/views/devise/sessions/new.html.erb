<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: 'form-signin'}) do |f| %>
  <h1 class="h3 mb-3 font-weight-normal" align="center">Sign in</h1>

  <%= f.label :email, class: "sr-only" %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>

  <%= f.label :password, class: "sr-only" %><br />
  <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %><br>

  <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
  <p class="mt-5 mb-3 text-muted" align="center">&copy;2018</p>
<% end %>

<hr>
