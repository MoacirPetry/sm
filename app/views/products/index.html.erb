<hr>
  <form class="form-inline">
    <div class="form-group">
      <i class="fas fa-list-ul mb-2 mr-sm-2"></i>
      <h4 class="text-left mb-2 mr-sm-2">List of Products</h4>
    </div>
    <div class="form-group">
      <%= link_to 'New Product', new_product_path, :class => "btn btn-md btn-success mb-2 mr-sm-2", :role => "button" %>
    </div>
  </form>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Price</th>
      <th>Category</th>
      <th><i class="fas fa-edit"></i></th>
      <th><i class="fas fa-trash-alt"></i></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= product.category.name %></td>
        <td><%= link_to 'Edit', edit_product_path(product), :class => "btn btn-md btn-info", :role => "button" %></td>
        <td><%= link_to 'Delete', product, :class => "btn btn-md btn-danger", :role => "button", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br><%= paginate @products %>
